{
	"manifest_version": 2,
	"name": "WebRTC Leak Prevent Toggle",
	"version": "1.0.3",
	"description": "Toggle WebRTC leak prevention.",
	"icons": {
		"128": "/img/icon128_on.png"
	},
	"browser_action": {
		"default_icon": "/img/icon128_off.png",
		"default_title": "WebRTC Toggle"
	},
	"options_ui": {
		"page": "/html/options.html",
		"chrome_style": true,
		"open_in_tab": false
	},
	"permissions": ["privacy", "storage"],
	"background": {
		"scripts": ["/js/background.js"],
		"persistent": false
	}
}
